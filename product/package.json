{
  "scripts": {
    "ng-build": "ng build",
    "ng-serve": "ng serve",
    "start": "NODE_ENV=develop electron ./dist-config",
    "precommit": "lint-staged",
    "lint": "tslint --project ./tsconfig.json",
    "format": "tslint --project ./tsconfig.json --fix && prettier */*.{js,css} --write",
    "release-darwin": "rm -rf アニメ画像に変換する君-mas-x64 && node build-scripts/for-mac-prebuild.js && cd tmpDarwin && npm install --prod && cd ../ && node build-scripts/for-mac-packaging.js",
    "prebuild-win32": "node build-scripts/for-windows-prebuild.js",
    "package-win32": "cd tmpWin32 && npm install --prod && cd ../ && node build-scripts/for-windows-packaging.js",
    "copy-debug-asssets": "node build-scripts/copy-debug-assets.js"
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.0.1",
    "@angular/common": "6.0.1",
    "@angular/compiler": "6.0.1",
    "@angular/core": "6.0.1",
    "@angular/forms": "6.0.1",
    "@angular/http": "6.0.1",
    "@angular/platform-browser": "6.0.1",
    "@angular/platform-browser-dynamic": "6.0.1",
    "@types/createjs": "^0.0.29",
    "bootstrap": "^4.1.1",
    "core-js": "^2.4.1",
    "cpx": "^1.5.0",
    "crypto-js": "^3.1.9-1",
    "del": "3.0.0",
    "electron": "2.0.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.3.1",
    "ngx-electron": "^1.0.4",
    "popper.js": "^1.14.3",
    "rxjs": "^6.1.0",
    "typescript": "2.7.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.1",
    "@angular-devkit/core": "0.6.1",
    "@angular/cli": "6.0.1",
    "@angular/compiler-cli": "6.0.1",
    "@angular/language-service": "6.0.1",
    "@types/jquery": "^3.3.1",
    "@types/node": "^10.0.6",
    "chokidar": "^2.0.3",
    "codelyzer": "~4.3.0",
    "electron-osx-sign": "0.4.10",
    "electron-packager": "^12.0.2",
    "lint-staged": "^7.1.0",
    "mkdirp": "^0.5.1",
    "postcss-import": "^11.0.0",
    "postcss-url": "^7.1.2",
    "prettier": "1.12.1",
    "ts-node": "~6.0.3",
    "tslint": "~5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-plugin-prettier": "^1.3.0"
  }
}
